@using PAW.ViewModels.Songs
@model NewSongViewModel

<input type="hidden" asp-for="SongId" />

<div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" type="text" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>
</div>

<div class="form-group">
    <label asp-for="Genre"></label>
    <input asp-for="Genre" type="text" class="form-control" />
    <span class="text-danger" asp-validation-for="Genre"></span>
</div>

<div class="form-group">
    <label asp-for="Artist"></label>
    <input asp-for="Artist" type="text" class="form-control" />
    <span class="text-danger" asp-validation-for="Artist"></span>
</div>