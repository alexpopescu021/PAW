    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-around">
                        <audio controls="controls">
                            <source src="../Assets/RickAstley_NeverGonnaGiveYouUp.mp3" type="audio/mpeg" />
                        </audio>
                    </div>
                    <p>
                        <label><input type="radio" name="gender" value="T">Never Gonna Give You Up</label>
                        <label><input type="radio" name="gender" value="F">Wrong Answer</label>
                    </p>
                    <p class="d-flex justify-content-around"><input type="button" value="Get Value"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



  

  

    <script>

        $(function () {
            $('#modal').modal('toggle');
        });


        $(document).ready(function () {
            $("input[type='button']").click(function () {
                var radioValue = $("input[name='gender']:checked").val();
                if (radioValue) {
                    if (radioValue.localeCompare("T"))
                        alert("Correct!");
                    else alert("Try Again!");
                }
            });
        });

        function modalFormComplete(modalName) {
            $(modalName).modal("hide");
            loadTable();
        }

        function LoadNewQuizView() {
            $('#newOrderDialog').removeClass("modal-custom-lg").addClass("modal-custom");
            loadServerPartialView("#newQuizBody", '@Url.Action("CreateQuiz", "Quiz")');
        }
    </script>
